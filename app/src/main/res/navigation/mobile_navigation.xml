<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.devloyde.healthguard.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_preventionDetailFragment"
            app:destination="@id/preventionDetailFragment" />
        <action
            android:id="@+id/action_navigation_home_to_infoDetailFragment"
            app:destination="@id/infoDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.devloyde.healthguard.ui.news.NewsFragment"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.devloyde.healthguard.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.devloyde.healthguard.ui.settings.SettingsFragment"
       />
    <fragment
        android:id="@+id/preventionDetailFragment"
        android:name="com.devloyde.healthguard.ui.home.PreventionDetailFragment"
        android:label="Preventions"
        tools:layout="@layout/fragment_prevention_detail" />
    <fragment
        android:id="@+id/infoDetailFragment"
        android:name="com.devloyde.healthguard.ui.home.InfoDetailFragment"
        android:label="Info" />
</navigation>